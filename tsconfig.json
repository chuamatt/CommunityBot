{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "#dmc/assets": ["src/library/assets"],
      "#dmc/client": ["src/library/client"],
      "#dmc/db": ["src/library/database"],
      "#dmc/config": ["src/library/config"]
    }
  }
}
